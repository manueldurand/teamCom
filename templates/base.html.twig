<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
        <a href="{{path('todo_list')}}"><button>TodoList<button></a>
        {% if is_granted('ROLE_USER') %}
            <a href="{{path('new_todo')}}"><button>Ajouter</button></a>
            <a href="{{path('logout')}}" ><button>se déconnecter</button></a>
            <a href="{{path('account')}}" ><button>mon compte</button></a>
        {% endif %}
         {% if not is_granted('ROLE_USER') %}
         <a href="{{path('app_login')}}" ><button>connexion</button></a>
         {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
