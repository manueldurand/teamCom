<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
        <nav class="navbar-brand">
        <a href="{{path('todo_list')}}"><button>TodoList<button></a>
        {% if is_granted('ROLE_USER') %}
            <a href="{{path('new_todo')}}"><button>Ajouter</button></a>
            <a href="{{path('logout')}}" ><button>se déconnecter</button></a>
            <a href="{{path('account')}}" ><button>mon compte</button></a>
        {% endif %}
         {% if not is_granted('ROLE_USER') %}
         <a href="{{path('app_login')}}" ><button>connexion</button></a>
         {% endif %}
         {% if is_granted('ROLE_ADMIN') %}
         <a href="{{path('users')}}"><button>Utilisateurs</button></a>
         {% endif %}
         </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
